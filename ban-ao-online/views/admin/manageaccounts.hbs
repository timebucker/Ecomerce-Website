{{>adminTopMenu}}
<section id="qhuy-main-content">
	<div class="qhuy-container">
		<div class="ds-giao-dich" style="height:550px; width: 90%;margin-left: auto; margin-right: auto;">
			<h2 style="color: black; margin-left: 15px;">Danh sách tài khoản:</h2>
			<div style="float:right;height:40px; width: 100%; background:#DBECF6;">
				<form style="float:right; margin-right: 18px;">
					<input class="form-control" placeholder="Tìm kiếm" id="txt_global_search" value="" type="text" style="padding: 3px 0;">
					<button type="button" id="btn-search">
						<img src="/img/icon/search.png">
					</button>
				</form>
			</div>

			<div id="chi-tiet-gd">
				<table cellpadding="0" cellspacing="0" style="text-align: left;">
					<tbody>
						<tr>
							<th>Tên thành viên</th>
							<th>Email</th>
							<th>Thời điểm đăng kí</th>
							<th>Chỉnh sửa</th>
						</tr>
                        {{#each users}}
						<tr>
                            <td>{{this.memberName}}</td>
                            <td>{{this.memberEmail}}</td>
                            <td>{{this.accountCreatedAt}}</td>
							<td>
                                {{#if this.isActive}}
								<button class="btn-quan-li-xoa" style="
                                    background-color: red;
                                    box-sizing: border-box;
                                    width: 80%;
                                    " onclick="changeStatus({{this.id}})">Khóa tài khoản</button>
                                {{else}}
								<button class="btn-quan-li-sua" style="
                                    background-color: #4CAF50;
                                    box-sizing: border-box;
                                    width: 80%;
                                    " onclick="changeStatus({{this.id}})">Mở khóa tài khoản</button>
                                {{/if}}
							</td>
						</tr>
                        {{/each}}
					</tbody>
				</table>
			</div>

            <!--
			<div class="button-luu-thay-doi">
					<button type="button" id="button-cart" class="btn btn-primary btn-lg btn-block"
					style="float:right; background: #45A049; padding: 5px;
							margin: 10px 18px 40px 0px; font-weight:bold;
							width: 150px; color:white;">
							Lưu thay đổi
					</button>
			</div>
            -->
		</div>
	</div>
</section>

<script>
function changeStatus(accid) {
    $.get('/admin/changestatus/' + accid, function(data, status) {
        window.location.replace('/admin/manageaccounts');
    });
}
</script>
